{
  "name": "chess-arena",
  "version": "1.0.0",
  "description": "A multiplayer chess game built with Vue, Vite, Express, and Socket.io",
  "main": "socket.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "socket.io": "^4.8.0",
    "vite": "^5.4.10",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "pm2": "^5.3.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "node server.js & node socket.js",  
    "serve": "vite preview",
    "stop": "pkill -f 'node server.js' && pkill -f 'node socket.js'",
    "restart": "npm run stop && npm run start"
  },
  "engines": {
    "node": ">=14.x"
  },
  "keywords": [
    "chess",
    "multiplayer",
    "vue",
    "vite",
    "socket.io",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT"
}
